<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
    <h1>Listing Test Questions</h1>

    <table>
      <thead>
      <tr>
        <th>Test</th>
        <th>Question</th>
        <th>Sort</th>
        <th colspan="3"></th>
      </tr>
      </thead>
      <tbody>
      <% @test_questions.each do |test_question| %>
        <tr>
          <td><%= test_question.test_id %></td>
          <td><%= test_question.question_id %></td>
          <td><%= test_question.sort %></td>
          <td><%= link_to 'Show', test_test_questions_url %></td>
          <td><%= link_to 'Edit', edit_test_test_question_path(@test,test_question) %></td>
          <td><%= link_to 'Destroy', test_test_question_path(@test,test_question), method: :delete, data: {confirm: 'Are you sure?'} %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <%= link_to 'New Test question', new_test_test_question_path, class: 'btn btn-success' %>
  </div>
</div>


